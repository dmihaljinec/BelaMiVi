<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkGrey</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:listDivider">@color/colorLightGrey</item>
        <item name="itemTextColor">@color/nav_item</item>
        <item name="itemIconTint">@color/nav_item</item>
        <item name="itemBackground">@drawable/ripple_nav_item</item>
    </style>

</resources>
