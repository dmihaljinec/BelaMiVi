<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorLightGrey</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogFragment</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="AppTheme.NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:listDivider">@color/colorLightGrey</item>
        <item name="itemTextColor">@color/nav_item</item>
        <item name="itemIconTint">@color/nav_item</item>
        <item name="itemBackground">@drawable/ripple_nav_item</item>
    </style>

    <!-- "Widget.Design.BottomSheet.Modal" -->
    <style name="BottomSheetDialogFragment" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bg</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:minHeight">48dp</item>
    </style>

</resources>
