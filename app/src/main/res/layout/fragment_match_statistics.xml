<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="match"
            type="bela.mi.vi.android.ui.match.MatchStatisticsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/team1_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamOneSetsWon}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sets"/>

        <TextView
            android:id="@+id/sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sets"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/team1_sets"
            app:layout_constraintEnd_toStartOf="@id/team2_sets"/>

        <TextView
            android:id="@+id/team2_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamTwoSetsWon}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sets"/>

        <TextView
            android:id="@+id/team1_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamOnePointsWon}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/team1_sets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/points"/>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            app:layout_constraintTop_toBottomOf="@id/sets"
            app:layout_constraintStart_toEndOf="@id/team1_points"
            app:layout_constraintEnd_toStartOf="@id/team2_points"/>

        <TextView
            android:id="@+id/team2_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamTwoPointsWon}"
            app:layout_constraintTop_toBottomOf="@id/team2_sets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/points"/>

        <TextView
            android:id="@+id/team1_declarations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamOneDeclarations}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/team1_points"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/declarations"/>

        <TextView
            android:id="@+id/declarations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Declarations"
            app:layout_constraintTop_toBottomOf="@id/points"
            app:layout_constraintStart_toEndOf="@id/team1_declarations"
            app:layout_constraintEnd_toStartOf="@id/team2_declarations"/>

        <TextView
            android:id="@+id/team2_declarations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamTwoDeclarations}"
            app:layout_constraintTop_toBottomOf="@id/team2_points"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/declarations"/>

        <TextView
        android:id="@+id/team1_all_tricks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{match.teamOneAllTricks}"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/team1_declarations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/all_tricks"/>

        <TextView
            android:id="@+id/all_tricks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Tricks"
            app:layout_constraintTop_toBottomOf="@id/declarations"
            app:layout_constraintStart_toEndOf="@id/team1_all_tricks"
            app:layout_constraintEnd_toStartOf="@id/team2_all_tricks"/>

        <TextView
            android:id="@+id/team2_all_tricks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamTwoAllTricks}"
            app:layout_constraintTop_toBottomOf="@id/team2_declarations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/all_tricks"/>

        <TextView
            android:id="@+id/team1_chosen_trump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamOneChosenTrumpString}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/team1_all_tricks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chosen_trump"/>

        <TextView
            android:id="@+id/chosen_trump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chosen Trump"
            app:layout_constraintTop_toBottomOf="@id/all_tricks"
            app:layout_constraintStart_toEndOf="@id/team1_chosen_trump"
            app:layout_constraintEnd_toStartOf="@id/team2_chosen_trump"/>

        <TextView
            android:id="@+id/team2_chosen_trump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamTwoChosenTrumpString}"
            app:layout_constraintTop_toBottomOf="@id/team2_all_tricks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/chosen_trump"/>

        <TextView
            android:id="@+id/team1_passed_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamOnePassedGamesString}"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/team1_chosen_trump"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/passed_games"/>

        <TextView
            android:id="@+id/passed_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passed Games"
            app:layout_constraintTop_toBottomOf="@id/chosen_trump"
            app:layout_constraintStart_toEndOf="@id/team1_passed_games"
            app:layout_constraintEnd_toStartOf="@id/team2_passed_games"/>

        <TextView
            android:id="@+id/team2_passed_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{match.teamTwoPassedGamesString}"
            app:layout_constraintTop_toBottomOf="@id/team2_chosen_trump"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/passed_games"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>